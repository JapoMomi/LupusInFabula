<?xml version="1.0" encoding="UTF-8"?>

<web-app id="lupus-webapp" version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">

<display-name>Lupus in Fabula</display-name>
    
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>HelloServlet2</servlet-name>
        <servlet-class>it.unipd.dei.webapp.lupus.servlet.HelloServlet2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPlayer</servlet-name>
        <servlet-class>it.unipd.dei.webapp.lupus.servlet.AddPlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPlayer</servlet-name>
        <servlet-class>it.unipd.dei.webapp.lupus.servlet.GetPlayerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet2</servlet-name>
        <url-pattern>/helloworld2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPlayer</servlet-name>
        <url-pattern>/addPlayer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPlayer</servlet-name>
        <url-pattern>/getPlayer</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>Connection pool to the database</description>
        <res-ref-name>jdbc/lupusdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>