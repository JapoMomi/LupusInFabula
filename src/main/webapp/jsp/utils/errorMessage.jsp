<div id="errorMessage" class="message" style="display: none">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <h4><strong id="errorTitle" class="messageTitle"></strong></h4>
    <p id="errorMessageDetails" class="messageDetails"></p>
    <button id="errorShowMore" class="showMore mb-0">
        <span id="errorShowMoreText" class="showMoreText m-auto">Show more</span>
    </button>
    <p id="errorMoreDetails" class="moreDetails" style="display: none"></p>
</div>